import mongoose from "mongoose";

const blogSchema = new mongoose.Schema(
  {
    title: {
      type: String,
      required: true,
    },
    content: {
      type: String,
      required: true,
    },
    images: [String], // Array of Cloudinary URLs
    authorId: {
      type: String,
      required: true,
    },
    authorName: {
      type: String,
      default: "Anonymous",
    },
  },
  { timestamps: true }
);

export default mongoose.models.Blog || mongoose.model("Blog", blogSchema);
